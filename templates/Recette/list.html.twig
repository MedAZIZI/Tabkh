{% extends 'base.html.twig' %}

{% block title %}
	MiaaaaM!
{% endblock %}

{% block body %}
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<style></style>
	<div class="container mx-auto w-full">
		<div class="profile-header" style="justify-content: center; align-items: center; margin: 50px;">
			<div class="p-2 m-5 text-center">
				<form action="{{ path('json_search') }}" method="get">

					<input type="text" placeholder="Recherche" name="query" class="p-2 border rounded-md  size-full"/>
					<div class="divider"></div>
					<button class="btn btn-wide btn-success" type="submit">Rechercher üîç</button>
				</form>

			</div>

		</div>
		<div class="flex flex-wrap gap-12 justify-center align-start" id="dataList"></div>

		<div class="profile-header text-center" style="justify-content: center; align-items: center; margin: 50px;">

			<div id="pagination">
				<div class="join grid grid-cols-3">
					<button class="join-item btn btn-outline" id="prevPage">Page pr√©c√©dente</button>
					<span id="currentPage">Page 1</span>
					<button class="join-item btn btn-outline" id="nextPage">Page suivante</button>
				</div>

			</div>
		</div>
		

	</div>
	<script>
		$(document).ready(function () {
let currentPage = 1;

function loadData(page) { // Effectuer une requ√™te AJAX pour r√©cup√©rer les donn√©es de la page sp√©cifi√©e
$.ajax({
url: `/JsonDATA/${page}`,
method: 'GET',
dataType: 'json',
success: function (data) { // Afficher les donn√©es dans la liste
$('#dataList').empty();
data.forEach(function (element) {
$('#dataList').append(`<div class="card w-80 bg-base-100 shadow-xl min-w-50  ">
					<figure><img src="/assets/rec/${
element.image
}" alt="Shoes"/></figure>
					<div class="card-body">
						<h2 class="card-title">
							${
element.Title
}

						</h2>
						<p>${
element.Description
}</p>
						<div class="card-actions justify-start py-1">

							<div class="badge badge-outline pb-0.5">Abricot</div>
							<div class="badge badge-outline ">Cannelle</div>

						</div>
						<div class="flex justify-end" style="color:#A7DCCD;">
							{#<a href="{{ path('app_rec', {'id': ${
element.Id
}}) }}">Voir plus</a>#}


						</div>


					</div>
				</div>`);
});

$('#currentPage').text (`Page ${page}`);
currentPage = page;
},
error: function (error) {
console.error('Erreur lors de la requ√™te AJAX : ', error);
}
});
}

// Charger les donn√©es initiales
loadData(currentPage);

// G√©rer les boutons de pagination
$('#prevPage').click(function () {
if (currentPage > 1) {
loadData(currentPage - 1);
}
});

$('#nextPage').click(function () {
loadData(currentPage + 1);
});
});
	</script>


{% endblock %}
